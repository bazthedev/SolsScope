/* Main Container */
#mainContainer {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1e1e2e, stop: 1 #181825);
    border-radius: 15px;
    border: 1px solid #313244; /* surface1 */
}

/* Title Bar */
#titleBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #313244, stop: 1 #1e1e2e);
    border-radius: 10px;
    border: 1px solid #45475a;
    padding: 10px;
    min-height: 40px;
}

#titleLabel {
    color: #cdd6f4; /* text */
    font-size: 18px;
    font-weight: bold;
    background: transparent;
}

#titleButtons QPushButton {
    background: #313244;
    color: #cdd6f4;
    border: 1px solid #45475a;
    border-radius: 8px;
    padding: 5px 15px;
    font-weight: bold;
    min-width: 40px;
}

#titleButtons QPushButton:hover {
    background: #45475a;
    border-color: #585b70;
}

#titleButtons QPushButton:pressed {
    background: #181825;
}

#closeButton {
    background: #f38ba8;
    border: 1px solid #eba0ac;
}

#closeButton:hover {
    background: #eba0ac;
}

#minimizeButton {
    background: #fab387;
    border: 1px solid #f9e2af;
}

#minimizeButton:hover {
    background: #f9e2af;
}

/* Custom Tab Widget */
#customTabWidget::pane {
    border: 1px solid #313244;
    background: #1e1e2e;
    border-radius: 10px;
    margin-top: 5px;
}

#customTabWidget::tab-bar {
    alignment: center;
}

#customTabWidget QTabBar::tab {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #313244, stop: 1 #1e1e2e);
    color: #bac2de;
    border: 1px solid #45475a;
    border-bottom: none;
    padding: 12px 25px;
    margin-right: 2px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    font-weight: bold;
    font-size: 12px;
}

#customTabWidget QTabBar::tab:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #89b4fa, stop: 1 #74c7ec);
    color: #1e1e2e;
    border-color: #89b4fa;
}

#customTabWidget QTabBar::tab:hover:!selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #45475a, stop: 1 #313244);
    color: #cdd6f4;
}

QWidget#tabContentWidget {
    background: #1e1e2e;
}

/* Scrollbars */
QScrollBar:vertical {
    background: #1e1e2e;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background: #45475a;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: #585b70;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
}

/* Group Boxes */
QGroupBox {
    color: #cdd6f4;
    font-weight: bold;
    font-size: 13px;
    border: 2px solid #313244;
    border-radius: 8px;
    margin-top: 10px;
    padding-top: 10px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1e1e2e, stop: 1 #181825);
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 15px;
    padding: 5px 10px;
    background: #89b4fa;
    border-radius: 5px;
    color: #1e1e2e;
}

/* Labels */
QLabel {
    color: #cdd6f4;
    font-size: 11px;
    background: transparent;
}

/* LineEdits */
QLineEdit {
    background: #313244;
    border: 1px solid #45475a;
    border-radius: 6px;
    padding: 8px 12px;
    color: #cdd6f4;
    font-size: 11px;
    selection-background-color: #89b4fa;
}

QLineEdit:focus {
    border: 2px solid #89b4fa;
    background: #45475a;
}

QLineEdit:disabled {
    background: #1e1e2e;
    color: #6c7086;
}

/* Checkboxes */
QCheckBox {
    color: #cdd6f4;
    font-size: 11px;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 2px solid #45475a;
    border-radius: 3px;
    background: #313244;
}

QCheckBox::indicator:checked {
    background: #89b4fa;
    border-color: #89b4fa;
    image: url(data:image/svg+xml;base64,);
}

QCheckBox::indicator:hover {
    border-color: #89b4fa;
}

/* Buttons */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #89b4fa, stop: 1 #74c7ec);
    color: #1e1e2e;
    border: 1px solid #89b4fa;
    border-radius: 8px;
    padding: 10px 20px;
    font-weight: bold;
    font-size: 11px;
    min-height: 15px;
    min-width: 100px;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #b4befe, stop: 1 #89b4fa);
    border-color: #b4befe;
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #74c7ec, stop: 1 #89b4fa);
}

QPushButton:disabled {
    background: #313244;
    color: #6c7086;
    border-color: #313244;
}

